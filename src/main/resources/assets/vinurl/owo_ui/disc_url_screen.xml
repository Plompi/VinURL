<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21/owo-ui.xsd">
    <components>
        <stack-layout>
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <stack-layout>
                            <children>
                                <texture id="text_field" texture="minecraft:textures/gui/sprites/container/anvil/text_field.png" texture-height="16" texture-width="110"
                                         region-height="16" region-width="110">
                                </texture>
                                <texture id="text_field_disabled" texture="minecraft:textures/gui/sprites/container/anvil/text_field_disabled.png" texture-height="16" texture-width="110"
                                         region-height="16" region-width="110">
                                    <visible-area>
                                        <height>0</height>
                                        <width>0</width>
                                    </visible-area>
                                </texture>
                                <text-box id="url">
                                    <text>{{placeholder}}</text>
                                    <max-length>400</max-length>
                                    <margins>
                                        <left>4</left>
                                    </margins>
                                    <sizing>
                                        <horizontal method="fixed">100</horizontal>
                                    </sizing>
                                    <show-background>false</show-background>
                                </text-box>
                                <label id="placeholder">
                                    <text>URL</text>
                                    <shadow>true</shadow>
                                    <color>gray</color>
                                    <margins>
                                        <left>5</left>
                                    </margins>
                                </label>
                            </children>
                            <vertical-alignment>center</vertical-alignment>

                        </stack-layout>
                        <small-checkbox id="loop">
                            <tooltip-text>loop</tooltip-text>
                            <margins>
                                <left>5</left>
                            </margins>
                        </small-checkbox>

                    </children>
                    <surface>
                        <panel/>
                    </surface>
                    <padding>
                        <all>15</all>
                    </padding>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>
            </children>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            <surface>
                <vanilla-translucent/>
            </surface>
        </stack-layout>
    </components>
</owo-ui>